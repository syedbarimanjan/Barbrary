<div>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= book.title %>">
</div>
<br>
<div>
    <label for="author">author</label>
    <select name="author" id="">
        <% authors.forEach(author => {%>
            <% if(author.id === book.author){ %>
                <option selected value="<%= author.id %>" label="<%= author.name %>">
            <% }else{ %>
                <option selected value="<%= author.id %>" label="<%= author.name %>">
                    <% } %>
        <% }); %>
    </select>
</div>
<br>
<div>
    <label for="publishDate">Publish Date</label>
    <input type="date" name="publishDate" value="<%= book.publishDate == null ? "" : book.publishDate.toISOString().split("T")[0] %>">
</div>
<br>
<div>
    <label for="pageCount">Page Count</label>
    <input type="number" name="pageCount" value="<%= book.pageCount %>" min="1">
</div>
<br>
<div>
    <label for="cover">Cover</label>
    <input type="file" name="cover" class="filepond">
</div>
<br>
<div>
    <label for="description">Description</label>
    <textarea name="description" cols="30" rows="10"><%= book.description %></textarea>
</div>
<br>