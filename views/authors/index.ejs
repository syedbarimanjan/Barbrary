<h2>search authors</h2>
<form action="/authors" method="GET">
    <label for="name">Name</label>
    <input type="text" name="name" value="<%if(locals.searchOption != null){%><%=searchOption.name%><%}%>">
    <button type="submit">Serach</button>
</form>
<br>
<% authors.forEach(author => { %>
    <div><%= author.name %></div>
    <a href="/authors/<%= author.id %>">View</a>
    <a href="/authors/<%= author.id %>/edit">Edit</a>
    <%- include("../partials/deleteForm.ejs",{url:`/authors/${author.id}`}) %>
<% }) %>